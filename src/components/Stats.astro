---
const stats = [
  { value: '650K+', label: 'Patients', color: 'accent-blue' },
  { value: '1B+', label: 'Measurements', color: 'blue-light' },
  { value: '11', label: 'Hospitals', color: 'green-dark' },
  { value: '7', label: 'Clinical Tasks', color: 'blue-dark' },
];
---

<section id="stats" class="bg-gradient-to-br from-accent-blue/5 via-blue-light/5 to-green-dark/5 py-16 md:py-24">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 gap-8 md:grid-cols-4">
      {stats.map((stat) => (
        <div class="text-center">
          <div class="mb-2 text-4xl font-bold text-accent-blue md:text-5xl">
            {stat.value}
          </div>
          <div class="text-lg font-medium text-gray-700">
            {stat.label}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
